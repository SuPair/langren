<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="5dp">

        <com.facebook.drawee.view.SimpleDraweeView
            xmlns:fresco="http://schemas.android.com/apk/res-auto"
            fresco:roundAsCircle="true"
            android:id="@+id/gameWizard_item_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:src="@mipmap/lang" />

        <TextView
            android:id="@+id/gameWizard_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="4"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="玩家1号"
            android:textColor="#080808"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/gameWizard_item_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:text="状态"
            android:textColor="#080808"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/gameWizard_item_marker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
             />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gameWizard_item_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="救"
                android:textColor="@color/state"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/gameWizard_item_poison"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="毒"
                android:textColor="@color/state"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>